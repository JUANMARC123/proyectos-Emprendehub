<Window x:Class="WpfAppProyectodeProgra.sing_up"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppProyectodeProgra"
        mc:Ignorable="d"
        Title="sing_up" Height="450" Width="800">
    <Grid>
        <Grid>


            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />

                <ColumnDefinition Width="*" />

            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1" >


                <Image Source="/imagenes/fondo.jpg"
                   Opacity="0.3" Margin="-357,0,443,0"/>


                <Image Source="/imagenes/sing up2 .png" Margin="0,10,20,23"/>
            </Grid>

            <Border Grid.Column="0"
                Background="Black"     
                CornerRadius="25"
                Margin="40"
                Padding="40"
                Opacity="0.6">
                <Grid VerticalAlignment="Center" Height="283" Margin="0,6,-2,-30">


                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="111*" />
                        <ColumnDefinition Width="125*" />
                    </Grid.ColumnDefinitions>



                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                   Text="SIGN UP"
                   FontSize="22"
                   HorizontalAlignment="Center"
                   Margin="63,1,85,10" Grid.RowSpan="2" Width="88"/>



                    <TextBlock Text="Nombre:" Grid.Row="2" Grid.Column="0"
                    FontSize="12" />

                    <TextBox x:Name="txtNombre" Grid.Row="3" Grid.Column="0"
                 Margin="0 5 20 15"/>


                    <TextBlock Text="Apellidos:" Grid.Row="4" Grid.Column="0"
                   Foreground="White" FontSize="12" FontWeight="Bold"/>
                    <TextBox x:Name="txtAP" Grid.Row="5" Grid.Column="0"
                 Margin="0 5 20 15"/>


                    <TextBlock Text="Celular:" Grid.Row="6" Grid.Column="0"
                    FontSize="12" />
                    <TextBox x:Name="txtCelular" Grid.Row="7" Grid.Column="0"
                 Margin="0 5 20 15"/>



                    <TextBlock Text="Fecha Nacimiento:" Grid.Row="2" Grid.Column="1"
                    FontSize="12" />
                    <TextBox x:Name="txtFNacimiento" Grid.Row="3" Grid.Column="1"
                 Margin="0 5 0 15"/>


                    <TextBlock Text="Correo:" Grid.Row="4" Grid.Column="1"
                    FontSize="12" />
                    <TextBox x:Name="txtCorreo" Grid.Row="5" Grid.Column="1"
                 Margin="0 5 0 15"/>

                    <TextBlock Text="Contraseña:" Grid.Row="6" Grid.Column="1"
                   FontSize="12" />
                    <PasswordBox x:Name="txtPasword" Grid.Row="7" Grid.Column="1"
                      Opacity="0.8" Margin="0 5 0 15"/>

                    <StackPanel Grid.Row="8" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="10,0" Width="216">

                        <Button Content="Limpiar"
                    Width="87" Margin="10"
                    Click="btnLimpiar_Click"
                                />

                        <Button Content="Aceptar"
                    Width="88" Margin="10"
                    Click="btnAceptar_Click"
                                />
                    </StackPanel>


                    <Label x:Name="lblMensaje"
                   Grid.Row="9" Grid.ColumnSpan="2"
                   Foreground="Red"
                   HorizontalAlignment="Center"
                   FontSize="14"
                   Margin="22,10,37,-21" Width="179"/>



                </Grid>
            </Border>

        </Grid>
    </Grid>
</Window>

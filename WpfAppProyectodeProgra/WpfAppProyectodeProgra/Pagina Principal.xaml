<Window x:Class="WpfAppProyectodeProgra.Pagina_Principal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppProyectodeProgra"
        mc:Ignorable="d"
        Title="Pagina_Principal" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Barra izquierda -->
        <DockPanel Grid.Column="0" Background="#1E1E2F">
            <StackPanel DockPanel.Dock="Top" Margin="10">
                <TextBlock Text="MENÚ" Foreground="White" FontSize="16" Margin="0 0 0 20"/>
                <Button Content="Agregar" Margin="0 5" Height="35" Click="BtnAgregar_Click"/>
                <Button Content="Gestionar Distribuidoras" Margin="0 5" Height="35" Click="BtnGestionarDistribuidoras_Click"/>
                <Button Content="Pedidos Realizados" Margin="0 5" Height="35" Click="BtnPedidos_Click"/>
            </StackPanel>

            <StackPanel DockPanel.Dock="Bottom" Margin="10">
                <Separator Margin="0 10"/>
                <TextBlock Text="Cuenta:" Foreground="White"/>
                <TextBlock Text="Usuario: admin" Foreground="White"/>
                <Button Content="Cerrar sesión" Margin="0 10 0 0" Height="30"/>
            </StackPanel>
        </DockPanel>

        <!-- Área derecha -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Barra de búsqueda + filtro -->
            <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center">
                <TextBlock Text="Buscar:" VerticalAlignment="Center" Margin="0 0 5 0" FontSize="10" Foreground="Black"/>
                <TextBox x:Name="SearchBox" Width="250" VerticalContentAlignment="Center" Padding="5"
                         TextChanged="SearchBox_TextChanged"/>

                <TextBlock Text="Categoría:" VerticalAlignment="Center" Margin="10 0 5 0" FontSize="10" Foreground="Black"/>
                <ComboBox x:Name="CbCategoria" Width="150" SelectionChanged="CbCategoria_SelectionChanged"/>
            </StackPanel>

            <!-- DataGrid -->
            <DataGrid x:Name="DistribuidorasGrid" Grid.Row="1"
                      AutoGenerateColumns="False" CanUserAddRows="False"
                      SelectionMode="Single" SelectionChanged="DistribuidorasGrid_SelectionChanged">
                <DataGrid.Columns>
                    
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                    <DataGridTextColumn Header="Ciudad" Binding="{Binding Ciudad}" Width="*"/>
                    <DataGridTextColumn Header="Productos" Binding="{Binding Productos}" Width="*"/>
                    <DataGridTextColumn Header="Categoría" Binding="{Binding Categoria}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>

<Window x:Class="WpfAppProyectodeProgra.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppProyectodeProgra"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="1.2*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1" >
            <Image Source="/imagenes/fondo.jpg"
               Opacity="0.3" Margin="52,46,45,34"/>
            
        </Grid>
        <Grid Grid.Column="1" >
            <Image Source="/imagenes/login 2.png" Margin="-386,0,370,0" Width="368"/>
        </Grid>

        <Border Grid.Column="1"
                Background="Black"     
                CornerRadius="25"
                Margin="40"
                Padding="40"
                Opacity="0.6">

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="329" Margin="16,-30,12,-40" Width="244">


                <TextBlock Text="L O G I N"
                           
                           FontSize="32"
                          
                           HorizontalAlignment="Center"
                           Margin="0 0 0 2"/>
                <TextBlock Text="Correo Electrónico"
                           
                           FontSize="16"  Margin="12,0,0,0"/>


                <TextBox x:Name="txtCorreo"
                         Height="35"
                         Margin="12,5,12,2"
                         FontSize="16"
                         Background="#22FFFFFF"
                         Foreground="White"
                         BorderBrush="#55FFFFFF"
                         />
                <TextBlock Text="Contraseña"
                           
                           FontSize="16" 
                           Margin="12,0,30,0"/>

                <PasswordBox x:Name="txtPassword"
                             Height="35"
                             Margin="12,5,12,20"
                             FontSize="16"
                             Background="#22FFFFFF"
                             Foreground="White"
                             BorderBrush="#55FFFFFF"/>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0" Height="40">

                    <Button Content="Limpiar"
                            
                            Width="100"
                            Margin="10"
                            Click="btnLimpiar_Click"/>

                    <Button Content="Aceptar"
                            
                            Width="100"
                            Margin="10"
                            Click="btnAceptar_Click"
                            />
                </StackPanel>
                <Button Content="Registrar"
                        Width="220"
                        Height="28"
                        Margin="0 10"
                        Click="btnRegistrar_Click"/>
            </StackPanel>


        </Border>
        <Label x:Name="lblMensaje"
                           Foreground="Red"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           Margin="113,331,106,69" Height="19" Width="213" RenderTransformOrigin="0.5,0.5" Grid.Column="1"/>

    </Grid>
</Window>

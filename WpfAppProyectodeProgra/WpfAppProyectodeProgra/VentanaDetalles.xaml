<Window x:Class="WpfAppProyectodeProgra.VentanaDetalles"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppProyectodeProgra"
        mc:Ignorable="d"
        Title="VentanaDetalles" Height="450" Width="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">

        <Border Background="#F9F9F9" CornerRadius="10" Padding="15" BorderBrush="#DDD" BorderThickness="1">
            <StackPanel>

                <!-- LOGO -->

                <!-- NOMBRE -->
                <!-- LOGO -->

                <!-- NOMBRE -->
                <!-- LOGO -->

                <!-- NOMBRE -->
                <Image Source="{Binding Logo}" Width="122" Height="124" Margin="0 0 0 10" RenderTransformOrigin="0.488,0.443"/>
                <Button Content="Pedidos Realizados" Margin="0 5" Height="35" Click="BtnAgregarPedido_Click"/>

                <!-- NOMBRE -->
                <TextBlock Text="{Binding Nombre}" FontSize="24" FontWeight="Bold" Foreground="#333" TextAlignment="Center" Margin="0 0 0 10"/>

                <StackPanel Margin="0 5 0 10">

                    <!-- CIUDAD -->
                    <TextBlock Text="{Binding Ciudad, StringFormat=Ciudad: \{0\}}" FontSize="14" Foreground="#555" Margin="0 2"/>

                    <!-- TELÉFONO -->
                    <TextBlock Text="{Binding Telefono, StringFormat=Teléfono: \{0\}}" FontSize="14" Foreground="#555" Margin="0 2"/>

                    <!-- AÑOS DE EXPERIENCIA -->
                    <TextBlock Text="{Binding AnosExperiencia, StringFormat=Años de experiencia: \{0\}}" FontSize="14" Foreground="#555" Margin="0 2"/>

                    <!-- PRODUCTOS -->
                    <TextBlock Text="{Binding Productos, StringFormat=Productos: \{0\}}" TextWrapping="Wrap" FontSize="14" Foreground="#555" Margin="0 2"/>

                    <!-- ENLACE -->
                    <TextBlock FontSize="14" Margin="0 5"><Hyperlink NavigateUri="{Binding Enlace}" RequestNavigate="Hyperlink_RequestNavigate" Foreground="#1E90FF"><Run Text="Página web de la distribuidora"/></Hyperlink></TextBlock>

                </StackPanel>

                <!-- IMÁGENES DE PRODUCTOS -->
                <TextBlock Text="Imágenes de productos:" FontWeight="Bold" FontSize="16" Foreground="#333" Margin="0 5 0 10"/>
                <ScrollViewer HorizontalScrollBarVisibility="Auto" Height="120">
                    <ItemsControl ItemsSource="{Binding ImagenesProductos}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Margin="5">
                                    <Image Source="{Binding}" Width="100" Height="100" Stretch="UniformToFill"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

            </StackPanel>
        </Border>

    </ScrollViewer>
</Window>

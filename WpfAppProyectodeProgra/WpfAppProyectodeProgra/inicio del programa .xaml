<Window x:Class="WpfAppProyectodeProgra.inicio_del_programa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Marketplace" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        >

    <Grid>

        
        <Border Margin="40"
                Background="#2A2A3C"
                CornerRadius="20"
                >
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="10"
                        >

                
                <TextBlock Text="¡Bienvenido al Marketplace!"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>

                
                <TextBlock Text="Explora, compra y disfruta de nuestros productos."
                           FontSize="18"
                           Foreground="White"
                           HorizontalAlignment="Center"/>


                <Image Source="/imagenes/logo.png"
                       Width="180"
                       Height="180"
                       Margin="10"/>
                
                <Button Content="Entrar"
                        Width="200"
                        Height="45"
                        Background="#4CAF50"
                        Foreground="White"
                        FontSize="18"
                        FontWeight="Bold"
                        Margin="10"
                        Cursor="Hand"
                        BorderThickness="0" Click="Button_Click"
                        />

            </StackPanel>
            
        </Border>
        
    </Grid>
</Window>
